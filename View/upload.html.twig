<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>FileUpload</title>
    <link href="/Public/assets/css/upload.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <a href="index.php?action=logout" class="logout-link">Logout</a>
    <h1 class="text-center">FileUpload</h1>
    <form action="index.php" method="post" enctype="multipart/form-data">
        <input type="hidden" name="action" value="add" required>
        <div class="block-send">
            <label class="label-file" for="file">
                <i class="fa fa-2x fa-camera"></i>
                <input class="input-file" type="file" name="file" id="file" onchange="validateSize(this)"
                       accept="{{ extends }}" required>
            </label>
            <div class="button-block">
                <button type="submit" value="submit" class="btn btn-primary">Add</button>
            </div>
        </div>
    </form>
    <div class="block__results">
        <div class="results">
            <p class="text-result">{{ name }}</p>
            <p class="text-result">{{ size }}</p>
            <p class="text-result">{{ exif }}</p>
        </div>
        <div class="file__block">
            <ul class="file__block-list">
                {% for file in data %}
                    <li class="file__block-item">{{ file }}</li>
                {% endfor %}
            </ul>
        </div>
    </div>
</div>
<script src="/Public/assets/js/main.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"
        integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
        crossorigin="anonymous"></script>
<script src="https://use.fontawesome.com/3a2eaf6206.js"></script>
</body>
</html>