<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>UserMove</title>
    <link href="/Public/assets/css/style.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<div class="container">
    <div class="center-block">
        <h1 class="text-center main-text">UserMove</h1>
    </div>
    <a href="index.php?action=create" class="btn btn-success button-new">New user</a>
        <table class="table align-middle mb-0 bg-white">
            <thead class="bg-light">
                <tr>
                    <th class="text-center">Name</th>
                    <th class="text-center">Email</th>
                    <th class="text-center">Gender</th>
                    <th class="text-center">Status</th>
                    <th class="text-center">Action</th>
                </tr>
            </thead>
            <tbody>
            {% for key, block in users %}
            <tr>
                <td class="text-center">{{ block.name }}</td>
                <td class="text-center">{{ block.email }}</td>
                <td class="text-center">{{ block.gender }}</td>
                <td class="text-center">{{ block.status }}</td>
                <td class="text-center">
                    <a href="index.php?action=delete&id={{ block.id }}" class="btn red btn-danger"
                       onclick="return confirm('Are you sure you want to delete this user?')">Delete</a>
                    <a href="index.php?action=edit&id={{ block.id }}" class="btn btn-primary">Edit</a>
                </td>
            </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</body>
</html>